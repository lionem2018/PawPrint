<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecordActivity"
    android:id="@+id/framelayout_record"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_go_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@id/layout_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/textview_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:fontFamily="@font/nanumgothic"
            android:paddingLeft="15dp"
            android:paddingTop="16dp"
            android:paddingRight="15dp"
            android:text="◀돌아가기"
            android:textColor="#686868"
            android:textSize="13dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

    <FrameLayout
        android:id="@+id/framelayout_record_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_go_record_health"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <!-- change fragment button -->

    <LinearLayout
        android:id="@+id/layout_go_record_health"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_round_top_a5a6ad"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/framelayout_record_picture"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_upper_triangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumgothic"
            android:text="오늘의 건강"
            android:textColor="#686868"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_go_record_picture"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_round_bottom_a5a6ad"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/framelayout_record_health"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumgothic"
            android:text="오늘의 너"
            android:textColor="#686868"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_lower_triangle" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout_record_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_go_record_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constrainedHeight="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>