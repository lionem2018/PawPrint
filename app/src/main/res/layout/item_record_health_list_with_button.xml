<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/layout_record_health_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_button_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:paddingTop="6dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edittext_record_health_list_item"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true">

        <Button
            android:id="@+id/button_record_health_list_item"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:background="@drawable/layout_round_e5e5e5"
            android:fontFamily="@font/nanumgothic"
            android:gravity="center"
            android:text="시간▼"
            android:textColor="#959595"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    
    <EditText
        android:id="@+id/edittext_record_health_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textSize="16dp"
        android:textColor="#686868"
        android:fontFamily="@font/nanumgothic"
        android:hint="총 20자 이내로 기록해주세요"
        android:textColorHint="#959595"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:maxLength="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_button_list_item"
        app:layout_constraintRight_toLeftOf="@id/imagebutton_remove"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageButton
        android:id="@+id/imagebutton_remove"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/edittext_record_health_list_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

</androidx.constraintlayout.widget.ConstraintLayout>