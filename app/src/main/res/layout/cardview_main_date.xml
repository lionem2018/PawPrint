<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/pageMarginAndOffset"
    android:layout_marginRight="@dimen/pageMarginAndOffset"
    android:layout_gravity="center"
    android:elevation="3dp"
    android:gravity="center"
    app:cardUseCompatPadding="true"
    android:background="@drawable/layout_round_ebebeb">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/gradient">

        <LinearLayout
            android:id="@+id/layout_cardview_date"
            android:layout_width="@dimen/offset"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageview_cardview"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_cardview_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="bottom|end"
                android:text="12"
                android:textSize="30dp"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/nanumgothic"
                android:textStyle="bold"
                android:rotation="90"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:text="."
                android:textSize="30dp"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/nanumgothic"
                android:textStyle="bold"
                android:rotation="90"/>

            <TextView
                android:id="@+id/textview_cardview_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="25"
                android:textSize="30dp"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/nanumgothic"
                android:textStyle="bold"
                android:rotation="90"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_cardview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/pic_example"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/layout_cardview_date"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constrainedWidth="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>