<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:paddingBottom="17dp"
    android:paddingTop="17dp"
    android:background="@drawable/layout_big_round_ffffff">

    <LinearLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constrainedHeight="true">

        <TextView
            android:id="@+id/textview_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물 성별 선택"
            android:textColor="#686868"
            android:textSize="25dp"
            android:fontFamily="@font/nanumgothic"
            android:textStyle="bold"
            android:layout_marginBottom="22dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:background="#5D5E6E"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup_gender"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_male"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_marginEnd="14dp"
            android:button="@null"
            android:text="남자아이"
            android:textColor="@color/buttonTextColor"
            android:fontFamily="@font/nanumgothic"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/radio_button_normal"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_button_female"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:button="@null"
            android:text="여자아이"
            android:textColor="@color/buttonTextColor"
            android:fontFamily="@font/nanumgothic"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/radio_button_normal"/>

    </RadioGroup>

    <Button
        android:id="@+id/button_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="확인"
        android:fontFamily="@font/nanumgothic"
        android:textSize="18dp"
        android:background="@drawable/layout_round_686868"/>

</androidx.constraintlayout.widget.ConstraintLayout>
